{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "iurygdeoliveira/labsis-kit",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.5",
        "blade-ui-kit/blade-heroicons": "^2.6",
        "devonab/filament-easy-footer": "^2.0",
        "filament/filament": "^5.0",
        "filament/spatie-laravel-media-library-plugin": "^5.0",
        "hugomyb/filament-media-action": "^5.0",
        "laravel/framework": "^12.0",
        "laravel/nightwatch": "^1.7",
        "laravel/pulse": "^1.4",
        "laravel/sanctum": "^4.0",
        "league/flysystem-aws-s3-v3": "^3.0",
        "livewire/flux": "^2.2",
        "mongodb/laravel-mongodb": "^5.5",
        "nesbot/carbon": "^3.10",
        "resend/resend-laravel": "^0.21.0",
        "spatie/laravel-backup": "^9.3",
        "spatie/laravel-permission": "^6.21",
        "spatie/laravel-query-builder": "^6.4"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^3.6",
        "beyondcode/laravel-query-detector": "^2.2",
        "driftingly/rector-laravel": "^2.1",
        "fakerphp/faker": "^1.23",
        "filament/upgrade": "^5.0",
        "fruitcake/laravel-debugbar": "^4.0",
        "larastan/larastan": "^3.0",
        "laravel-shift/blueprint": "^2.13",
        "laravel/boost": "^2.0.0",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.41",
        "laravel/tinker": "^2.10.1",
        "leonardolima/laravel-security-check": "^1.3",
        "lucascudo/laravel-pt-br-localization": "^3.0",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "pestphp/pest": "^4.2",
        "pestphp/pest-plugin-browser": "^4.0",
        "phpunit/phpunit": "^12.5.8",
        "spatie/boost-spatie-guidelines": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "app/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "reset": [
            "vendor/bin/sail composer update",
            "vendor/bin/sail artisan boost:update",
            "vendor/bin/sail artisan optimize:clear",
            "vendor/bin/sail artisan filament:optimize-clear",
            "vendor/bin/sail artisan migrate:fresh-all --seed",
            "vendor/bin/sail artisan storage:init",
            "vendor/bin/sail artisan filament:optimize",
            "docker compose exec -u root laravel.test rm -rf public/build",
            "docker compose exec -u root laravel.test chown -R sail:sail node_modules",
            "vendor/bin/sail npm run build",
            "vendor/bin/sail artisan test"
        ],
        "post-autoload-dump": [
            "@php artisan config:clear",
            "@php artisan clear-compiled",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade",
            "@php artisan vendor:publish --force --tag=livewire:assets --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan ide-helper:generate"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
